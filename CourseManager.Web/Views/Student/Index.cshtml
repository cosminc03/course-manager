@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="pm-body clearfix">
    <ul class="tab-nav tn-justified">
        <li class="active">
            <a href="">Subscribed Courses</a>
        </li>
    </ul>

    @foreach (var item in @ViewBag.Courses)
    {
        <div class="pmb-block m-t-25">
            <div class="pmbb-header">
                <h2 class="fw-400">
                    <i class="zmdi zmdi-book m-r-10"></i>
                    @item.Item1.Title
                </h2>
                <ul class="actions">
                    <li class="dropdown">
                        <a href="" data-toggle="dropdown">
                            <i class="zmdi zmdi-more-vert"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a asp-area="" asp-controller="Course" asp-action="Show" asp-route-id="@item.Item1.Id">Show</a>
                            </li>

                            <li>
                                <a asp-area="" asp-controller="Course" asp-action="Posts" asp-route-id="@item.Item1.Id">Posts</a>
                            </li>

                            @if (item.Item2)
                            {
                                <li>
                                    @Html.ActionLink("Unsubscribe", "Unsubscribe", "Course", new { id = item.Item1.Id })
                                </li>

                            }

                        </ul>

                    </li>
                </ul>
            </div>
            <div class="pmbb-body p-l-30">
                <div class="pmbb-view">
                    <div class="panel-group" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-collapse">
                            <div class="panel-heading" role="tab" id="headingTwo">
                                <h4 class="panel-title">
                                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion"
                                       href="#collapseDescriptionCourse1" aria-expanded="false" aria-controls="collapseDescriptionCourse1">
                                        <h4 class="fw-100 m-0">Description</h4>
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseDescriptionCourse1" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
                                <div class="panel-body">
                                    @item.Item1.Description
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pmbb-view">
                    <h4 class="fw-100">Lecturer</h4>
                    <strong>
                        <a asp-area="" asp-controller="Employee" asp-action="Profile" asp-route-id="@item.Item1.Owner.BaseId" class="btn btn-default waves-effect">@item.Item1.Owner.FirstName @item.Item1.Owner.LastName</a>
                    </strong>
                </div>
            </div>
        </div>
    }

</div>