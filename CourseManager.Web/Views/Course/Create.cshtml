@model CreateViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Course</h2>

<form asp-controller="Course" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" novalidate>
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" id="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" id="Description"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <select asp-for="Year" id="Year">
            <option value="1">Year I</option>
            <option value="2">Year II</option>
            <option value="3">Year III</option>
        </select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Semester">Semester</label>
        <select asp-for="Semester" id="Semester">
            <option value="1">Sem I</option>
            <option value="2">Sem II</option>
        </select>
        <span asp-validation-for="Semester" class="text-danger"></span>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
