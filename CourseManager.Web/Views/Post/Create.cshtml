@model PostCreateViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Post</h2>

<form asp-controller="Post" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" novalidate>
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" id="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Content">Content</label>
        <input asp-for="Content" type="text" id="Content" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Course">Select Course: </label>
        <select asp-for="Course" asp-items="@Model.CourseList"></select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
