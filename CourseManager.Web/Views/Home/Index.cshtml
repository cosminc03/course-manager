@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewBag.Title = "Index";
}

<div class="pm-body clearfix">
    <ul class="tab-nav tn-justified">
        <li class="active">
            <a href="">Subscribed Courses</a>
        </li>
    </ul>

    @if (SignInManager.IsSignedIn(User))
    {
        if (UserManager.GetRolesAsync(UserManager.GetUserAsync(User).Result).Result.Contains("Employee"))
        {
            <a asp-area="" asp-controller="Course" asp-action="Create" data-toggle="tooltip" title="Create new Course" class="btn bgm-lightgreen btn-icon waves-effect waves-circle waves-float pull-right m-t-15 m-r-40">
                <i class="zmdi zmdi-plus"></i>
            </a>
        }
    }

    <div class="pmb-block m-t-25">
        <div class="pmbb-header">
            <h2 class="fw-400"><i class="zmdi zmdi-book m-r-10"></i> Course 1</h2>
            <a href="#" class="btn bgm-orange waves-effect m-t-25">Go to seminars</a>
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            @Html.ActionLink("View", "Show", "Course", new { id = 1 })
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (UserManager.GetRolesAsync(UserManager.GetUserAsync(User).Result).Result.Contains("Employee"))
                            {
                                <li>
                                    @Html.ActionLink("Edit", "Edit", "Course", new { id = 1 })
                                </li>
                                <li>
                                    @Html.ActionLink("Delete", "Delete", "Course", new { id = 2 })
                                </li>
                            }
                            else
                            {
                                <li>
                                    @Html.ActionLink("Unsubscribe", "Unsubscribe", "Course", new { id = 1 })
                                </li>
                            }
                        }
                    </ul>

                </li>
            </ul>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <div class="panel-group" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-collapse">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#accordion"
                                   href="#collapseDescriptionCourse1" aria-expanded="false" aria-controls="collapseDescriptionCourse1">
                                    <h4 class="fw-100 m-0">Description</h4>
                                </a>
                            </h4>
                        </div>
                        <div id="collapseDescriptionCourse1" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry
                                richardson ad squid. 3 wolf moon officia aute, non cupidatat skateboard
                                dolor brunch. Food truck quinoa nesciunt laborum eiusmod. Brunch 3 wolf moon
                                tempor, sunt aliqua put a bird on it squid single-origin coffee nulla
                                assumenda shoreditch et. Nihil anim keffiyeh helvetica, craft beer labore
                                wes anderson cred nesciunt sapiente ea proident. Ad vegan excepteur butcher
                                vice lomo. Leggings occaecat craft beer farm-to-table, raw denim aesthetic
                                synth nesciunt you probably haven't heard of them accusamus labore
                                sustainable VHS.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (SignInManager.IsSignedIn(User))
            {
                if (UserManager.GetRolesAsync(UserManager.GetUserAsync(User).Result).Result.Contains("Student"))
                {
                    <div class="pmbb-view">
                        <h4 class="fw-100">Lecturer</h4>
                        <strong>
                            <a href="#" class="btn btn-default waves-effect">Jamie Freeman</a>
                        </strong>
                    </div>
                }
            }
        </div>
    </div>

</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
