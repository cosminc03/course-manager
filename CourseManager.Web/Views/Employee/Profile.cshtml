@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="pm-body clearfix">
    <ul class="tab-nav tn-justified">
        <li class="active"><a href="profile-prof.html">Profile</a></li>
    </ul>

    <div class="pmb-block">
        <div class="pmbb-header">
            <h2><i class="zmdi zmdi-account m-r-10"></i> Basic Information</h2>

            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a data-ma-action="profile-edit" href="">Edit</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <dl class="dl-horizontal">
                    <dt>First Name</dt>
                    <dd>@ViewBag.Employee.FirstName</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Last Name</dt>
                    <dd>@ViewBag.Employee.LastName</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Email</dt>
                    <dd>@UserManager.FindByIdAsync(ViewBag.Employee.BaseId.ToString()).Result.Email</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Birthday</dt>
                    <dd>@ViewBag.Employee.DateOfBirth.ToString("dd/mm/yyy")<dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="pmb-block">
        <div class="pmbb-header">
            <h2><i class="zmdi zmdi-format-list-numbered m-r-10"></i> Courses</h2>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <div class="table-responsive">
                    <table class="table table-striped table-prof-courses">
                        <tbody>
                            @{
                                var counter = 1;
                            }
                            @foreach (var course in @ViewBag.EmployeeCourses)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <a asp-controller="Course" asp-action="Show" asp-route-id="@course.Id">
                                            @course.Title
                                        </a>
                                    </td>
                                </tr>

                               counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="pmb-block">
        <div class="pmbb-header">
            <h2><i class="zmdi zmdi-format-list-numbered m-r-10"></i> Associated Courses</h2>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <div class="table-responsive">
                    <table class="table table-striped table-prof-courses">
                        <tbody>
                            @{
                                counter = 1;
                            }
                            @foreach (var course in @ViewBag.Teaching)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <a asp-controller="Course" asp-action="Show" asp-route-id="@course.Id">
                                            @course.Title
                                        </a>
                                    </td>
                                </tr>

                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
